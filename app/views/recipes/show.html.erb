<% content_for :banner do %>Recipes<% end %>

<style>
    body {
        background-color: #fafafa;
    }
</style>

<div class="recipe-wrapper">
    <div class="wrapper-600">
        <div id="recipe">
            <div class="background-thumbnail"
                style="background-image: url('<%= asset_path(<%= @recipe.image.url(:medium) %>')">
                <div class="overlay">
                </div>
            </div>

            <div class="content">
                <div class="info">
                    <h1><%= @recipe.title %></h1>
                    <p><%= @recipe.description %></p>

                    <ul>
                        <li class="calories">
                            <span>Calories:</span> <%= @recipe.calories %> Cal
                        </li><li class="carbs">
                            <span>Carbs:</span> <%= @recipe.carbohydrates %> g
                        </li><li class="proteins">
                            <span>Proteins:</span> <%= @recipe.proteins %> g
                        </li><li class="fat">
                            <span>Fat:</span> <%= @recipe.fat %> g
                        </li>
                    </ul>
                </div>

                <div class="ingredients lists">
                    <h3>Ingredients</h3>
                    <ul>
                        <% @recipe.ingredients.each do |ingredient| %>
                            <li><%= ingredient.name %></li>
                        <% end %>
                    </ul>
                </div>

                <div class="directions lists">
                    <h3>Directions</h3>
                    <ol>
                        <% @recipe.directions.each do |direction| %>
                            <li><%= direction.step %></li>
                        <% end %>
                    </ol>
                </div>
            </div>
        </div>
        <%= link_to "Go Back", :back, class: "back-button" %>
    </div>
</div>