<div class="banner-image sign-up">
    <div id="background-darken">
        <div class="wrapper-wide">
            <h1>Your journey begins here.</h1>
        </div>
    </div>
</div>

<div id="form" class="sign-up">
    <div class="wrapper-600">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field clearfix">
        <div class="half-field left">
          <%= f.label :first_name, "First Name" %><br />
          <%= f.text_field :first_name, autofocus: true, autocomplete: "off", required: true %>
        </div>
        <div class="half-field right">
          <%= f.label :last_name, "Last Name" %><br />
          <%= f.text_field :last_name, autocomplete: "off", required: true %>
        </div>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autocomplete: "off", required: true %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", required: true %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Repeat Password" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", required: true %>
      </div>

      <div class="field clearfix">
        <div class="half-field left">
          <%= f.label :age %><br />
          <%= f.number_field :age, :step => 0.5, autocomplete: "off", required: true %>
        </div>
        <div class="half-field right">
          <%= f.label :sex %><br />
          <%= f.select :sex, ["Male", "Female"] %>
        </div>
      </div>

      <div class="field clearfix">
        <div class="half-field left">
          <%= f.label :height %> <em>(cm)</em><br />
          <%= f.number_field :height, :step => 'any', autocomplete: "off", required: true %>
        </div>
        <div class="half-field right">
          <%= f.label :weight %> <em>(kg)</em><br />
          <%= f.number_field :weight, :step => 'any', autocomplete: "off", required: true %>
        </div>
      </div>

      <div class="field">
        <%= f.submit "Sign Up", class: "button button-highlight button-block" %>
      </div>
    <% end %>
  </div>
</div>